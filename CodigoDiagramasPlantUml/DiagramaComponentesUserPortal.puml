@startuml
!theme plain

<style>
title {
  FontSize 20
  FontColor #333333
}
frame {
  BackgroundColor #E3F2FD
  BorderColor #1565C0
  FontName Arial
}
component {
    BackgroundColor #FFFFFF
    BorderColor #1565C0
    FontColor #1A237E
    roundCorner 15
    shadowing true
}
</style>

title Estructura de Componentes - Portal del Cliente

frame "Espacio de Usuario" {
  component [
    **Mi Perfil**
    ----
    Actualización de datos personales.
  ] as Perfil

  component [
    **Mis Mascotas**
    ----
    Gestión de la información de las mascotas.
  ] as Mascotas

  component [
    **Mis Citas**
    ----
    Consulta y gestión de citas agendadas.
  ] as Citas

  component [
    **Historial de Pagos**
    ----
    Consulta de pagos y descarga de facturas.
  ] as Pagos

  component [
    **Historial Clínico**
    ----
    Vista de consulta del historial de sus mascotas.
  ] as Historial

  Perfil -- Mascotas
  Mascotas -- Citas
  Citas -- Pagos
  Mascotas -- Historial
}

note bottom of Mascotas
  Permite al cliente registrar
  una nueva mascota directamente
  desde su portal.
end note
@enduml
